{% extends 'GuitarFeelingBundle::layout.html.twig' %}

{% block body %}
   <div class="row">
      <div id="content" class="col-md-9">
         <b>Title:</b> {{ tutorial.title }}
         <br/>
         <b>Picture:</b>
         {% if tutorial.picture %}
            <img src="{{ asset('uploads/Tutorial/pictures/' ~ tutorial.picture) }}" width="40%" height="40%" />
         {% endif %}
         <br/>
         <b>Description:</b> {{ tutorial.description }}
         <br/>
         <b>Category:</b> {{ tutorial.category.name }}
         <br/>
         <b>Level:</b> {{ tutorial.level.name }}
         <br/>
         <b>Introduction:</b>
         <div id="introduction" contenteditable="false">{{ tutorial.introduction | raw }}</div>
      </div>
   </div>
{% endblock %}
