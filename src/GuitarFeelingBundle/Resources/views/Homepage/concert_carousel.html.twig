<div id="concertCarousel" class="carousel slide" data-ride="carousel">
   <div class="carousel-inner" role="listbox">
   {% for concert in closestConcerts %}
      <div class="{% if loop.first %}item active{% else %}item{% endif %}" data-path="{{ path('guitar_feeling_concerts_show', {'id': concert.id}) }}">
         <div class="container">
            <div class="row">
               <div class="col-lg-3">{{ concert.title }}</div>
            </div>
            <div class="row">
               {% if concert.picture %}
                  <div class="col-lg-3">
                     <img src="{{ asset('uploads/Concert/pictures/' ~ concert.picture) }}" width="100%" height="100%" />
                  </div>
               {% endif %}
               <div class="col-lg-2">{{ concert.description }}</div>
            </div>
         </div>
      </div>
   {% endfor %}
   </div>
   <a class="left carousel-control" href="#concertCarousel" role="button" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
   </a>
   <a class="right carousel-control" href="#concertCarousel" role="button" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
   </a>
   <ol class="carousel-indicators">
      <li data-target="#concertCarousel" data-slide-to="0" class="active"></li>
      <li data-target="#concertCarousel" data-slide-to="1"></li>
      <li data-target="#concertCarousel" data-slide-to="2"></li>
   </ol>
</div>
